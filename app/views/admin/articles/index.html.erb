<main class='container-fluid bg-light'>
  <h3>Articles Listing</h3>
  <div class='new-article'><%= link_to 'New article', new_admin_article_path, class: 'btn btn-success' %></div>
  <div class='table-responsive'>
    <table class='table table-bordered table-hover'>
      <thead class='thead-light'>
        <tr>
          <th>Title</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @articles.each do |article| %>
          <tr>
            <td><%= link_to article.title, admin_article_path(article), class: 'btn btn-primary' %></td>
            <td><%= link_to 'Edit', edit_admin_article_path(article), class: 'btn btn-warning' %></td>
            <td><%= link_to 'Delete', admin_article_path(article),
                    method: :delete,
                    class: 'btn btn-danger',
                    data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to 'New article', new_admin_article_path, class: 'btn btn-success' %>
</main>


