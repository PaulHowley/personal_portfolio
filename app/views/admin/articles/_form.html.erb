<%= form_for [:admin, @article] do |form| %>
 
  <%= render partial: 'shared/errors', locals: {obj: @article} %>
 
  <div class='form-group'>
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control', required: true %>
  </div>
 
      
  <div class='form-group'>
    <%= form.label :text %>
    <%= form.text_area :text, class: 'form-control', required: true %>
  </div>

  <div class='form-group'>
    <%= form.submit class:'btn btn-success'%>
  </div>
 
<% end %>
