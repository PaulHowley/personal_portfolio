<h3>Post a Comment</h3>

<%= render partial: 'shared/errors', locals: {obj: @comment} %>
<%= form_for [@article, @comment] do |f| %>
  <p>
    <%= f.label :commenter %><br/>
    <%= f.text_field :commenter, required: :true %>
  </p>
  <p>
    <%= f.label :body %><br/>
    <%= f.text_area :body, required: :true %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>
